{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript watch",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "presentation": {
        "clear": true,
        "group": "tsc-and-shell"
      },
      "isBackground": true
    },
    {
      "label": "Shell",
      "type": "shell",
      "command": "bash",
      "args": ["-l"],
      "isBackground": true,
      "presentation": {
        "group": "tsc-and-shell"
      }
    },
    {
      "label": "TS and shell",
      "dependsOn": ["TypeScript watch", "Shell"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
