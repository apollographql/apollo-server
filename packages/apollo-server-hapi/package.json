{
  "name": "apollo-server-hapi",
  "version": "2.0.0",
  "description": "Production-ready Node.js GraphQL server for Hapi",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "prepare": "npm run compile",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apollographql/apollo-server/tree/master/packages/apollo-server-hapi"
  },
  "keywords": [
    "GraphQL",
    "Apollo",
    "Hapi",
    "Server",
    "Javascript"
  ],
  "author": "Jonas Helfer <jonas@helfer.email>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/apollographql/apollo-server/issues"
  },
  "homepage": "https://github.com/apollographql/apollo-server#readme",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@apollographql/graphql-playground-html": "^1.6.0",
    "accept": "^3.0.2",
    "apollo-server-core": "file:../apollo-server-core",
    "apollo-upload-server": "^5.0.0",
    "boom": "^7.1.0",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.0.4"
  },
  "devDependencies": {
    "apollo-server-integration-testsuite": "file:../apollo-server-integration-testsuite"
  },
  "peerDependencies": {
    "graphql": "^0.12.0 || ^0.13.0 || ^14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testRegex": "src/__tests__/.*$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "test-utils"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
