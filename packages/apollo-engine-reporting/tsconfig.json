{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include" : [
    "src/**/*"
  ]
}
