{
  "name": "apollo-server",
  "version": "0.1.5",
  "description": "Apollo GraphQL server for Node.js",
  "main": "build/src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "npm run build",
    "test": "npm run testonly",
    "posttest": "npm run lint",
    "testonly": "mocha --reporter spec --full-trace build/test/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -e src/*.ts && tslint test/*.ts",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha -- --reporter dot --full-trace build/test/index.js",
    "postcoverage": "remap-istanbul --input coverage/coverage.json --type lcovonly --output coverage/lcov.info",
    "remap": "remap-istanbul -i coverage/coverage.json -t lcovonly -o coverage/lcov.info",
    "prepublish": "npm run build",
    "postinstall": "npm dedupe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollostack/apollo-server.git"
  },
  "keywords": [
    "GraphQL",
    "Apollo",
    "Meteor",
    "Proxy",
    "Cache",
    "Javascript"
  ],
  "author": "Jonas Helfer <jonas@helfer.email>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/apollostack/apollo-proxy/issues"
  },
  "homepage": "https://github.com/apollostack/apollo-proxy#readme",
  "dependencies": {
    "graphql-tools": "^0.6.0",
    "apollo-tracer": "^0.1.3",
    "express-widgetizer": "^0.5.11",
    "fs": "0.0.2",
    "lodash": "^4.10.0",
    "node-uuid": "^1.4.7",
    "performance-now": "^0.2.0",
    "request": "^2.72.0"
  },
  "devDependencies": {
    "body-parser": "^1.15.0",
    "chai": "^3.5.0",
    "dataloader": "^1.1.0",
    "express": "^4.13.4",
    "express3": "0.0.0",
    "graphql": "^0.6.0",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^2.3.3",
    "multer": "^1.0.3",
    "nodemon": "^1.9.1",
    "remap-istanbul": "^0.6.4",
    "request-promise": "^2.0.1",
    "supertest": "^1.0.1",
    "supertest-as-promised": "^2.0.2",
    "tsc": "^1.20150623.0",
    "tslint": "^3.11.0",
    "typescript": "^1.8.10"
  },
  "peerDependencies": {
    "graphql": "^0.5.0 || ^0.6.0"
  }
}
