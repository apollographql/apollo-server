{
  "name": "apollo-server-monorepo",
  "private": true,
  "license": "MIT",
  "repository": "github:apollographql/apollo-server",
  "type": "module",
  "scripts": {
    "clean": "git clean -dfqX -- ./node_modules **/{dist,node_modules}/ **/tsconfig*tsbuildinfo",
    "precompile": "node scripts/precompile.mjs",
    "compile": "tsc --build tsconfig.build.json",
    "postcompile": "node scripts/postcompile.mjs",
    "watch": "tsc --build tsconfig.esm.json --watch",
    "pretest": "npm run compile",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watchAll",
    "test:smoke": "npm run test:smoke:prepare && npm run test:smoke:run",
    "test:smoke:prepare": "smoke-test/prepare.sh",
    "test:smoke:run": "smoke-test/smoke-test.sh",
    "test:ci": "npm run coverage -- --ci --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "test:one-integration": "npm run test -- packages/server/src/__tests__/express4/integration.test.ts",
    "coverage": "npm test -- --coverage",
    "coverage:upload": "codecov",
    "codegen": "graphql-codegen",
    "lint": "eslint .",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "spell-check": "cspell lint '**' '.changeset/**' --no-progress || (echo 'Add any real words to cspell-dict.txt.'; exit 1)",
    "changeset-publish": "npm run compile && changeset publish",
    "changeset-check": "changeset status --verbose --since=origin/main",
    "changeset-version": "changeset version && npm i"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=14.16.0",
    "npm": ">=8.5.0"
  },
  "devDependencies": {
    "@apollo/client": "3.7.12",
    "@apollo/gateway": "2.4.1",
    "@apollo/server-plugin-landing-page-graphql-playground": "4.0.0",
    "@apollo/subgraph": "2.4.1",
    "@apollo/utils.createhash": "2.0.1",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.1",
    "@graphql-codegen/cli": "3.3.0",
    "@graphql-codegen/typescript-operations": "3.0.3",
    "@graphql-tools/mock": "8.7.20",
    "@graphql-tools/schema": "9.0.18",
    "@josephg/resolvable": "1.0.1",
    "@rollup/plugin-commonjs": "24.1.0",
    "@types/async-retry": "1.4.5",
    "@types/body-parser": "1.19.2",
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/express-serve-static-core": "4.17.33",
    "@types/lodash": "4.14.194",
    "@types/lodash.sumby": "4.6.7",
    "@types/lodash.xorby": "4.7.7",
    "@types/negotiator": "0.6.1",
    "@types/node": "14.18.42",
    "@types/node-fetch": "2.6.3",
    "@types/qs-middleware": "1.0.1",
    "@types/retry": "0.12.2",
    "@types/superagent": "4.1.16",
    "@types/supertest": "2.0.12",
    "@types/test-listen": "1.1.0",
    "@types/type-is": "1.6.3",
    "@types/uuid": "9.0.1",
    "@types/whatwg-mimetype": "3.0.0",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "@vendia/serverless-express": "4.10.1",
    "awaiting": "3.0.0",
    "body-parser": "1.20.2",
    "codecov": "3.8.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "cspell": "6.31.1",
    "eslint": "8.38.0",
    "eslint-plugin-import": "2.27.5",
    "express": "4.18.2",
    "glob": "10.0.0",
    "graphql": "16.6.0",
    "graphql-tag": "2.12.6",
    "jest": "29.5.0",
    "jest-config": "29.5.0",
    "jest-junit": "15.0.0",
    "jest-mock": "29.5.0",
    "jest-mock-random": "1.1.1",
    "jest-serializer-html": "7.1.0",
    "lodash.sumby": "4.6.0",
    "nock": "13.3.0",
    "node-fetch": "2.6.9",
    "prettier": "2.8.7",
    "qs-middleware": "1.0.3",
    "requisition": "1.7.0",
    "rimraf": "5.0.0",
    "rollup": "3.20.2",
    "supertest": "6.3.3",
    "test-listen": "1.1.0",
    "ts-jest": "29.1.0",
    "typescript": "5.0.4"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*/jest.config.js"
    ]
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.6.4"
  }
}
